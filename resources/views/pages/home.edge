@layout()
  @slot('meta')
    <meta name="description" content="Our awesome movie list">
  @endslot

    <h1> It Works! </h1>

    <div class="flex flex-wrap -mx-6">
      @each((movie, index) in movies)
        <div class="w-full lg:w-1/3 px-3">
          @!movie.card({ movie, class: 'w-full'})
        </div>
      @end
    </div>
  </div>

  <div class="fixed bottom-3 right-3 flex gap-3">
    @button({ href: '#'})
         Flush Redis Db
    @end

  </div>
@end
